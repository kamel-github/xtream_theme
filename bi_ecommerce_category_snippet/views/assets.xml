<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--=== Inclusion of assets files in frontend ===-->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" type="text/css"  href="/bi_ecommerce_category_snippet/static/src/scss/owl.carousel.min.css" />
            <link rel="stylesheet" type="text/css"  href="/bi_ecommerce_category_snippet/static/src/scss/bi_ecommerce_category_snippet_frontend.scss" />
        </xpath>
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/bi_ecommerce_category_snippet/static/src/js/owl.carousel.js"/>
            <script type="text/javascript" src="/bi_ecommerce_category_snippet/static/src/js/bi_ecommerce_category_snippet_frontend.js"/>
        </xpath>
    </template>

    <!--=== Inclusion of assets files in editor  ===-->
    <template id="assets_editor" inherit_id="website.assets_editor">
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" type="text/css"  href="/bi_ecommerce_category_snippet/static/src/scss/bi_ecommerce_category_snippet_editor.scss" />
        </xpath>
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/bi_ecommerce_category_snippet/static/src/js/bi_ecommerce_category_snippet_editor.js"/>
        </xpath>
    </template>
</odoo>
